<nav>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-lg-3">
                <div class="top-logo"></div>
            </div>
            <div class="col-md-8 col-lg-9 navigation">
                {% for item in site.pages %}
                    <a href="index.php?page={{ item.url }}" class="navigation__item">{{ item.name }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col">
            {% if site.current_user is not null %}
                <p>You are logged in as: {{ site.current_user }}</p>
            {% else %}
                <p>You are not logged in.</p>
            {% endif %}
        </div>
    </div>
</div>